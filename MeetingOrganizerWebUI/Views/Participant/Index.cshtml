@model List<MeetingOrganizer.DtoLayer.ParticipantDtos.ResultParticipantDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Participant List</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Meetings</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-bordered mt-3">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Surname</th>                                   
                                    <th scope="col" colspan="2" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>                                      
                                        <td>
                                            <a href="/Participant/UpdateParticipant/@item.ParticipantId" class="btn btn-warning btn-sm">Edit / Details</a>
                                        </td>
                                        <td>
                                            <a href="/Participant/DeleteParticipant/@item.ParticipantId" class="btn btn-danger btn-sm" onclick="return confirmDelete();">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-right">
                            <a href="/Participant/CreateParticipant/" class="btn btn-outline-primary">Create New Participant</a>
                            <a href="/Meeting/Index/" class="btn btn-outline-primary">Meeting List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

