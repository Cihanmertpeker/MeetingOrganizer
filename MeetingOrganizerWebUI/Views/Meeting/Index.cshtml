@model List<MeetingOrganizer.DtoLayer.MeetingDtos.ResultMeetingDto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}



    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Meeting List</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Meetings</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered mt-3">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Subject</th>
                                        <th scope="col">Meeting Date</th>
                                        <th scope="col">Start Time</th>
                                        <th scope="col">End Time</th>
                                        <th scope="col" colspan="2" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.MeetingSubject</td>
                                            <td>@item.MeetingDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.MeetStartTime.ToString("HH:mm")</td>
                                            <td>@item.MeetEndTime.ToString("HH:mm")</td>
                                            <td>
                                                <a href="/Meeting/UpdateMeeting/@item.MeetingId" class="btn btn-warning btn-sm">Edit / Details</a>
                                            </td>
                                            <td>
                                            <a href="/Meeting/DeleteMeeting/@item.MeetingId" class="btn btn-danger btn-sm" onclick="return confirmDelete();">Delete</a>
                                        </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="text-right">
                                <a href="/Meeting/CreateMeeting/" class="btn btn-outline-primary">Set New Meeting</a>
                                <a href="/Participant/Index/" class="btn btn-outline-primary">Participant List</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this meeting?');
    }
</script>