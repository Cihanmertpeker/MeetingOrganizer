@*  @using MeetingOrganizerWebUI.Dtos.MeetingDtos 
 *@

@{
    Layout = null;
	int count = 0;

}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Meeting List</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Subject</th>
									<th scope="col">Meeting Date</th>
									<th scope="col">Start Time</th>
									<th scope="col">End time</th>
									<th scope="col">Edit</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.ProductName</td>
										<td>@item.Price</td>
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>
										<td><a href="/Meeting/UpdateMeeting/@item.MeetingId" class="btn btn-outline-success">Edit</a></td>
										<td><a href="/Meeting/DeleteMeeting/@item.MeetingId" class="btn btn-outline-danger">Delete</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Meeting/CreateMeeting/" class="btn btn-outline-primary">Set New Meeting</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
