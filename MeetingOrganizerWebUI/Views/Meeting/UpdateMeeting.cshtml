@model MeetingOrganizer.DtoLayer.MeetingDtos.UpdateMeetingDto

@{
    ViewData["Title"] = "UpdateMeeting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Update Meeting</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                        </div>
                        <input type="hidden" asp-for="MeetingId" />

                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Subject</label>
                                <input type="text" class="form-control" asp-for="MeetingSubject" name="MeetingSubject" id="MeetingSubject" required>
                            </div>
                            <div class="form-group">
                                <label for="meetingDate">Date</label>
                                <input type="date" class="form-control" asp-for="MeetingDate" name="MeetingDate" id="meetingDate" required>
                            </div>
                            <div class="form-group">
                                <label for="startTime">Start Time</label>
                                <input type="time" class="form-control" asp-for="MeetStartTime" name="MeetStartTime" id="startTime" required>
                            </div>
                            <div class="form-group">
                                <label for="endTime">End Time</label>
                                <input type="time" class="form-control" asp-for="MeetEndTime" name="MeetEndTime" id="MeetEndTime" required>
                            </div>
                            <div class="form-group">
                                <label for="participants">Select Participants:</label>
                                <select asp-for=ParticipantIds id="participants" multiple="multiple" class="form-control" name="ParticipantIds">
                                    @foreach (var x in ViewBag.Participants)
                                    {
                                        <option value="@x.Value">@x.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Update Meeting</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


